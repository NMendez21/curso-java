package poo;

public class Coche {
	private int ruedas;
	private int largo;
	private int ancho;
	private int motor;
	private int peso_plataforma;
	
	//variantes
	private String color;
	int peso_total;
	boolean asientos_cuero, climatizador;
	
	
	/*metodo constructor*/
	public Coche() {
		
		ruedas = 4;
		largo = 2000;
		ancho = 300;
		motor = 1600;
		peso_plataforma = 500;
		
		
	}
	
	
	public String devolver_datos_generales() {
		
		return "El largo del auto es: "+largo+"\nLa cantidad de ruedas es: "+ruedas+"\nLa cantidad de ruedas es: "+ruedas+" \nUn peso de la plataforma de "+peso_plataforma+" kg";
		
	}
	
	public void establece_color(String color_coche) {
		
		//color = "azul"; //metodos setters
		color = color_coche;
		
	}	
	
	public String devolver_color() {
		
		return "El color del carro es "+color;
		
	}
	
	//setter
	public void establece_asientos_cuero(String asientos_cuero) {
		if(asientos_cuero=="si")
		{
			this.asientos_cuero=true;
		}else {
			this.asientos_cuero=false;
		}
	}
	
	public String devolver_asientos() {
		
		if(asientos_cuero==true) {
			return "El coche tiene asientos de cuero";
		}else {
			return "El coche tiene asientos de serie";
		}
	}
	
	
	//setter
	public void configura_climatizador(String climatizador)
	{
		if(climatizador == "si")
		{
			this.climatizador = true;
		}
		else {
			this.climatizador = false;
		}
	}
	
	//getter
	public String devolver_climatizador() {
		if(climatizador == true) {
			return "El coche incorpora climatizador";
		}else {
			return "El coche lleva aire acondicionado";
		}
	}
	
	
}
