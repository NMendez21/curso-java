package poo;

public class ConstanteFinal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		Empleados emp1 = new Empleados("Nicolás");
		Empleados emp2 = new Empleados("Esteban");
		Empleados emp3 = new Empleados("Emilio");
		
		emp1.cambiar_seccion("informatica");
		
		
		System.out.println(emp1.devolver_datos());
		
		Empleados.id++;
		
		System.out.println(emp2.devolver_datos());
		
		Empleados.id++;
		
		System.out.println(emp3.devolver_datos());
		
		
		
	}

}

class Empleados{
	
	public Empleados(String nom) {
		
		nombre = nom;
		seccion = "administración";
		
		id=1;
		
	}
	
	public void cambiar_seccion(String seccion)
	{
		this.seccion = seccion;
	}
	
	public void aumentar_id() {
		
		id++;
		
	}
	
	
	
	public String devolver_datos()
	{
		return "El nombre es: "+nombre+ " y la seccion es: "+seccion+", el id es: "+id;
	}
	
	
	private final String nombre;
	private String seccion;
	public static int id; //permite compartir una variable entre todos los objetos.
	
	
}
